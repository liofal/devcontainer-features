{
    "id": "base-setup",
    "version": "1.1.0",
    "name": "Liofal Base DevContainer Setup",
    "description": "Shared devcontainer config: tools, extensions, and env vars",
    "features": {
        "ghcr.io/devcontainers/features/aws-cli:1": {},
        "ghcr.io/devcontainers-extra/features/terraform-asdf:2": {},
        "ghcr.io/devcontainers-extra/features/kubectl-asdf:2": {},
        "ghcr.io/devcontainers-extra/features/node-asdf:0": {},
        "ghcr.io/skriptfabrik/devcontainer-features/gitlab-cli:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Anthropic.claude-code",
                "kilocode.kilo-code",
                "GitLab.gitlab-workflow",
                "HashiCorp.terraform",
                "openai.chatgpt"
            ]
        }
    },
    "containerEnv": {
        "AWS_PROFILE": "SpeosInnovationProd",
        "AWS_REGION": "eu-west-1",
        "KUBECONFIG": "/home/node/.kube/innovationProd.config"
    }
}
