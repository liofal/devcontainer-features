{
    "id": "base-setup",
    "version": "1.2.0",
    "name": "Liofal Base DevContainer Setup",
    "description": "Shared devcontainer config: extensions and env vars",
    "customizations": {
        "vscode": {
            "extensions": [
                "Anthropic.claude-code",
                "kilocode.kilo-code",
                "GitLab.gitlab-workflow",
