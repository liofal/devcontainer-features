{
    "id": "base-setup",
    "version": "1.0.0",
    "name": "Liofal Base DevContainer Setup",
    "description": "Shared devcontainer config: tools, extensions, and env vars",
    "features": {
        "ghcr.io/devcontainers/features/aws-cli:1": {},
        "ghcr.io/goldsam/dev-container-features/flux2:1": {},
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
        "ghcr.io/casl0/devcontainer-features/eksctl:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "weaveworks.vscode-gitops-tools",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "GitLab.gitlab-workflow",
                "openai.chatgpt",
                "Anthropic.claude-code"
            ]
        }
    },
    "containerEnv": {
        "AWS_PROFILE": "SpeosInnovation",
        "KUBECONFIG": "/home/vscode/.kube/innovation.config"
    }
}
