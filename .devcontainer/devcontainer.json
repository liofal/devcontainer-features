{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		// "ghcr.io/dhoeric/features/google-cloud-cli:1": {},
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/devcontainers-extra/features/terraform-asdf:2": {},
		"ghcr.io/devcontainers-extra/features/kubectl-asdf:2": {},
		"ghcr.io/devcontainers-extra/features/node-asdf:0": {},
		"ghcr.io/skriptfabrik/devcontainer-features/gitlab-cli:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
		// "ghcr.io/devcontainers-extra/features/ffmpeg-apt-get:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"Anthropic.claude-code",
				"kilocode.kilo-code",
				"GitLab.gitlab-workflow",
				"HashiCorp.terraform",
				"openai.chatgpt"
			]
		}
	},
	"containerEnv": {
		"AWS_PROFILE": "SpeosInnovationProd",
		"AWS_REGION": "eu-west-1",
		// "CLAUDE_CODE_USE_BEDROCK": "1",
		"KUBECONFIG": "/home/node/.kube/innovationProd.config"
	},
	"mounts": [
		"source=${localEnv:HOME}/.kube/,target=/home/vscode/.kube/,type=bind",
		"source=${localEnv:HOME}/.claude/,target=/home/vscode/.claude/,type=bind",
		"source=${localEnv:HOME}/.claude/.claude.json,target=/home/vscode/.claude.json,type=bind",
		"source=${localEnv:HOME}/.codex/,target=/home/vscode/.codex/,type=bind",
		"source=${localEnv:HOME}/.aws/,target=/home/vscode/.aws/,type=bind",
		"source=${localEnv:HOME}/.config/gh/,target=/home/vscode/.config/gh/,type=bind"
	]
}
